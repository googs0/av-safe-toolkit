{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://purl.org/avsafe/schemas/case.schema.json",
  "title": "HF-AVC Case",
  "type": "object",
  "required": [
    "id",
    "title",
    "modalities",
    "description",
    "sources"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "country": {
      "type": [
        "string",
        "null"
      ]
    },
    "period": {
      "type": [
        "string",
        "null"
      ]
    },
    "modalities": {
      "type": "array",
      "items": {
        "enum": [
          "audio",
          "light"
        ]
      }
    },
    "description": {
      "type": "string"
    },
    "reported_effects": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "descriptors": {
      "type": "object",
      "properties": {
        "laeq_bucket_db": {
          "type": [
            "string",
            "null"
          ]
        },
        "spectral_notes": {
          "type": [
            "string",
            "null"
          ]
        },
        "tlm_freq_hz": {
          "type": [
            "string",
            "null"
          ]
        },
        "tlm_mod_percent": {
          "type": [
            "string",
            "null"
          ]
        },
        "notes": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "legal_ethics": {
      "type": "object",
      "properties": {
        "uncat": {
          "type": [
            "string",
            "null"
          ]
        },
        "echr_article_3": {
          "type": [
            "string",
            "null"
          ]
        },
        "istanbul_protocol_refs": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "cases_cited": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "year": {
            "type": [
              "integer",
              "null"
            ]
          },
          "url": {
            "type": [
              "string",
              "null"
            ],
            "format": "uri"
          },
          "publisher": {
            "type": [
              "string",
              "null"
            ]
          },
          "doc_type": {
            "type": [
              "string",
              "null"
            ]
          },
          "provenance": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    }
  }
}